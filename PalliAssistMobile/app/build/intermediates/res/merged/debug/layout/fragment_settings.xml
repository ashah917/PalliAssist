<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="io.palliassist.palliassistmobile.SettingsFragment">


    <Spinner
        android:id="@+id/languages"
        android:layout_width="350dp"
        android:layout_height="45dp"
        android:layout_marginTop="12dp"
        android:entries="@array/lang_options"
        android:prompt="@string/lang_prompt"
        android:background="@color/openingBGC"
        android:spinnerMode="dialog"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        android:textAlignment="center"/>

    <android.support.v7.widget.AppCompatButton
        android:id="@+id/pass_reset"
        android:layout_width="350dp"
        android:layout_height="45dp"
        android:layout_marginTop="1dp"
        android:layout_marginBottom="10dp"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:layout_below="@+id/languages"
        android:padding="12dp"
        android:text="Reset Login Credentials"
        android:textStyle="bold"
        android:textSize="18dp"
        android:background="@color/openingBGC" />

    <TextView
        android:id="@+id/message"
        android:layout_width="280dp"
        android:layout_height="50dp"
        android:layout_marginTop="1dp"
        android:layout_below="@+id/pass_reset"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        android:text="For feedback and support, please contact:
        Team Palliassist at Rice University"
        android:textColor="@color/colorAccent"/>

    <android.support.v7.widget.AppCompatButton
        android:id="@+id/btn_logout"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="24dp"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:layout_below="@+id/message"
        android:padding="12dp"
        android:text="Logout"
        android:textStyle="bold"
        android:textSize="18dp"
        android:background="@color/openingBGC" />

    <ImageView android:id="@+id/logo"
        android:src="@drawable/logotry3pals"
        android:layout_below="@+id/btn_logout"
        android:layout_width="wrap_content"
        android:layout_marginTop="40dp"
        android:layout_height="100dp"
        android:paddingLeft="24dp"
        android:paddingRight="24dp"
        android:layout_centerHorizontal="true" />

</RelativeLayout>